@{
    ViewData["Title"] = "Leaderboard";
}

<h1 class="text-center">Leaderboard</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Team</th>
            <th>Points</th>      
        </tr> 
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Placement
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Points
                </td>
            </tr>
        }
    </tbody>
</table>